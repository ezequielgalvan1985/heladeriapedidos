<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvProducto"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="3dp"
    >

        <!--
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/pivImagen"
            android:scaleType="centerCrop"
        />
        -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


            <TextView
                android:id="@+id/lblCodigoItemProducto"
                android:layout_column="0"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Codigo:">
            </TextView>

            <TextView

                android:id="@+id/ptvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID Value"
                android:textSize="18dp"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ptvNombre"
                android:layout_column="1"
                android:text="Nombreaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                >
            </TextView>

    <CheckBox
        android:id="@+id/item_producto_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="CheckBox" />


</RelativeLayout>
</android.support.v7.widget.CardView>
