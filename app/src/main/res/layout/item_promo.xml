<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="3dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_promo_txt_nombre"
            android:text="2 x 1"
            android:textSize="@dimen/textsize_resumen_titulo_h1"/>

        <TextView
            android:layout_below="@+id/item_promo_txt_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_promo_txt_descripcion"
            android:textStyle="italic"
            android:text="LLevate 2 Kilos al Precio de 1"
            />



        <TextView
            android:layout_below="@+id/item_promo_txt_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_promo_lbl_cantidad_kilos"
            android:text="Kilos: "
            />

        <TextView
            android:layout_toRightOf="@+id/item_promo_lbl_cantidad_kilos"
            android:layout_below="@+id/item_promo_txt_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_promo_txt_cantidad_kilos"
            android:text="2KG"
            />





        <TextView
            android:layout_below="@+id/item_promo_lbl_cantidad_kilos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_promo_lbl_precio_promo"
            android:text="Precio: "
            />

        <TextView
            android:layout_below="@+id/item_promo_lbl_cantidad_kilos"
            android:layout_toRightOf="@+id/item_promo_lbl_precio_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_promo_txt_precio_monto"
            android:text="$ 350.00"
            />



        <TextView
            android:layout_below="@+id/item_promo_txt_precio_monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_promo_lbl_descuento"
            android:text="Descuento de "
            android:textSize="@dimen/textsize_resumen_titulo_h1"/>

        <TextView
            android:layout_below="@+id/item_promo_txt_precio_monto"
            android:layout_toRightOf="@+id/item_promo_lbl_descuento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_promo_txt_importe_descuento"
            android:text=" $ 200 "
            android:textSize="@dimen/textsize_resumen_titulo_h1"/>


        <TextView
            android:layout_below="@+id/item_promo_txt_importe_descuento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_promo_lbl_fechadesde"
            android:text="Promo valida desde: "
            />

        <TextView
            android:layout_below="@+id/item_promo_txt_importe_descuento"
            android:layout_toRightOf="@+id/item_promo_lbl_fechadesde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_promo_txt_fechadesde"
            android:text=" 20/05/2018 "
            />


        <TextView
            android:layout_below="@+id/item_promo_txt_importe_descuento"
            android:layout_toRightOf="@+id/item_promo_txt_fechadesde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_promo_lbl_fechahasta"
            android:text=" hasta el "
            />

        <TextView
            android:layout_below="@+id/item_promo_txt_importe_descuento"
            android:layout_toRightOf="@+id/item_promo_lbl_fechahasta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_promo_txt_fechahasta"
            android:text=" 20/06/2018 "
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
