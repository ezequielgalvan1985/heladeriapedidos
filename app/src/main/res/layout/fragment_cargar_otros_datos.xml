<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adaptivex.pedidoscloud.View.Pedidos.CargarOtrosDatosFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/relative_layout_main_padding">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cvCargarOtrosDatos"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="3dp"
        android:layout_above="@+id/otros_datos_btn_listo"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 - Ultimo Paso para crear tu pedido!"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/otros_datos_txt_monto_total_helados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto a Pagar: "
                android:textSize="20dp"
                android:layout_marginRight="15dp"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Con Cuanto Abonas?:"
                android:textSize="20dp"
                android:layout_marginRight="15dp"/>

            <EditText
                android:id="@+id/otros_datos_txt_monto_abona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/cargar_otros_datos_txt_cucuruchos_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cucuruchos: c/u"
                android:textSize="20dp"
                android:layout_marginRight="15dp"/>


            <EditText
                android:id="@+id/otros_datos_cantidad_cucuruchos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cucharitas:"
                android:textSize="20dp"
                android:layout_marginRight="15dp"/>

            <EditText
                android:id="@+id/otros_datos_cantidad_cucharitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar a Domicilio?:"
                android:textSize="20dp"
                android:layout_marginRight="15dp"/>

            <CheckBox
                android:id="@+id/otros_datos_chk_envio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"

                android:checked="true"/>

        </LinearLayout>





    </LinearLayout>
    </android.support.v7.widget.CardView>



        <Button
            android:id="@+id/otros_datos_btn_listo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_check_black_24dp"
            android:text=" Listo "
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_alignParentBottom="true"
            />
</RelativeLayout>


</FrameLayout>
